{
  "name": "real-estate-platform",
  "version": "1.0.0",
  "description": "Real Estate Platform - Full Stack Application",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "cacheDirectories": ["backend/node_modules"],
  "scripts": {
    "start": "node backend/server.js",
    "postinstall": "npm install --prefix backend",
    "build": "echo 'Backend only - no frontend build needed'",
    
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    
    "install:backend": "npm install --prefix backend",
    "install:frontend": "npm install --prefix frontend",
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    
    "test:api": "node -e \"fetch('https://real-estate-platform-bf1c8ee4e0a4.herokuapp.com/api/health').then(r=>r.json()).then(console.log).catch(console.error)\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jamshed-Ali-23/Real-Estate-Platform.git"
  },
  "keywords": ["real-estate", "nodejs", "react", "express", "mongodb"],
  "author": "Jamshed Ali",
  "license": "MIT"
}
