    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test:api": "node -e \"fetch('https://real-estate-platform-bf1c8ee4e0a4.herokuapp.com/api/health').then(r=>r.json()).then(console.log).catch(console.error)\""
